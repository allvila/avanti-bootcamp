generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int      @id @default(autoincrement())
  nome          String   @db.VarChar(30)
  email         String   @unique @db.VarChar(100)
  telefone      String?  @db.VarChar(15)
  senha         String   @db.VarChar(200)
  criado_em     DateTime @default(now())
  atualizado_em DateTime @updatedAt
  itens         Item[]
}

model Categoria {
  id            Int      @id @default(autoincrement())
  nome          String   @db.VarChar(30)
  prioridade    Int
  criado_em     DateTime @default(now())
  atualizado_em DateTime @updatedAt
  itens         Item[]
}

enum Prioridade {
  UM
  DOIS
  TRES
}

model Item {
  id            Int         @id @default(autoincrement())
  usuario_id    Int
  usuario       Usuario     @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  nome          String      @db.VarChar(50)
  fotoUrl       String?
  data_ocorrido DateTime    @db.Date
  data_entregue DateTime?   @db.Date
  email         String?     @db.VarChar(100)
  telefone      String?     @db.VarChar(15)
  estado        String      @db.VarChar(30)
  cidade        String      @db.VarChar(30)
  bairro        String      @db.VarChar(30)
  logradouro    String      @db.VarChar(100)
  numero        Int?
  status        String      @db.VarChar(10)
  created_em    DateTime    @default(now()) @db.Timestamp(6)
  atualizado_em DateTime    @updatedAt @db.Timestamp(6)
  prioridade    Prioridade?
  Categoria     Categoria?  @relation(fields: [categoriaId], references: [id])
  categoriaId   Int?

  @@map("item")
}
