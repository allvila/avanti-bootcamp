generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int      @id @default(autoincrement())
  nome          String   @db.VarChar(30)
  email         String   @db.VarChar(100) @unique
  telefone      String?  @db.VarChar(15)
  senha         String   @db.VarChar(200)
  criado_em     DateTime @default(now())
  atualizado_em DateTime @updatedAt
}

model Categoria {
  id            Int      @id @default(autoincrement())
  nome          String   @db.VarChar(30)
  prioridade    Int
  criado_em     DateTime @default(now())
  atualizado_em DateTime @updatedAt
  itens         Item[]   // Adicionando a relação com o modelo Item
}

enum Prioridade {
  UM
  DOIS
  TRES
}

model Item {
  id             Int        @id @default(autoincrement())
  usuario_id     String     // Alterando o tipo para String para corresponder ao Usuario.id
  usuario        Usuario    @relation(fields: [usuario_id], references: [id], onDelete: Cascade) // Definindo a relação com o modelo Usuario
  nome           String     @db.VarChar(50)
  foto           String?
  data_ocorrido  DateTime   @db.Date
  data_entregue  DateTime?  @db.Date
  email          String?    @db.VarChar(100)
  telefone       String?    @db.VarChar(15)
  estado         String     @db.VarChar(30)
  cidade         String     @db.VarChar(30)
  bairro         String     @db.VarChar(30)
  logradouro     String     @db.VarChar(100)
  numero         Int?
  status         String     @db.VarChar(10)
  created_em     DateTime   @default(now()) @db.Timestamp(6)
  atualizado_em  DateTime   @updatedAt @db.Timestamp(6) // Usando @updatedAt para atualização automática
  prioridade     Prioridade?

  @@map("item")
}
